<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:orientation="vertical">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/txtCard3" android:textSize="18sp"
                android:layout_margin="10dp"
                android:foregroundGravity="center_vertical|clip_horizontal|center_horizontal"
                android:layout_gravity="center_vertical"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edtText3" android:foregroundGravity="right" android:layout_gravity="right"
                android:layout_margin="5dp"/>
    </android.support.v7.widget.CardView>
</RelativeLayout>